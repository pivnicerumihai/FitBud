<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FitBud" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

<!--    Main Button Style-->
    <style name="img_btn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/dark_red</item>
        <item name="android:shadowDx">5.5</item>
        <item name="android:shadowDy">5.3</item>
        <item name="android:shadowRadius">3.6</item>
        <item name="strokeWidth">3dp</item>
        <item name="strokeColor">@color/light_red_40</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

<!--    NavigatorView TextView Styles-->
<style name="e_mail">
<item name="android:textColor">@color/black</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">20sp</item>
    <item name="android:padding">4dp</item>
    <item name="android:layout_marginBottom">10dp</item>
</style>
    <style name="user_type">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

<!--    Categories Style-->
    <style name = "category_image">
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>
<!--    -->
<style name="category_title">
    <item name="android:textColor">@color/black</item>
    <item name="android:layout_weight">3</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:textSize">20sp</item>
</style>
<!--    -->
    <style name="category_title_alt">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">30sp</item>
    </style>
<!--    -->
    <style name="layout_alt">
        <item name="android:background">@color/dark_red</item>
    </style>
<!--   Exercises/Stretches/Workouts themes-->

    <style name="img_btn_category" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/dark_red</item>
        <item name="android:shadowDx">5.5</item>
        <item name="android:shadowDy">5.3</item>
        <item name="android:shadowRadius">3.6</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="category_exercise_difficulty">
        <item name="android:background">@color/white_700</item>
        <item name="android:radius">25dp</item>
        <item name="android:padding">5dp</item>
    </style>
</resources>